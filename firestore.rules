rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /produktuak/{productId} {
      allow read: if true;
      allow write: if true; // ALDI BATERAKO BAIMENA SEEDER-A EXEKUTATZEKO
    }

    match /eskaerak/{orderId} {
      allow create: if true;
      allow read: if true;
      allow update, delete: if false;
    }
  }
}
